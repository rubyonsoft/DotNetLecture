            <div class="center-1">
                <div class="page registration-page">
                    <div class="page-title">
                        <h1>Register</h1>
                    </div>
                    <div class="page-body">
                        @model Customer
                        <form id="formRegister" asp-controller="Home" asp-action="Register" method="post">
                            <div class="fieldset">
                                <div class="title"><strong>Your Personal Details</strong></div>
                                <div class="form-fields">
                                    <div class="inputs">
                                        <label asp-for="CustomerID"></label>
                                        <input asp-for="CustomerID" type="text"><span class="required">*</span>
                                        <span asp-validation-for="CustomerID" class="text-danger"></span>
                                    </div>
                                    <div class="inputs">
                                        <label asp-for="ContactName"></label>
                                        <input id="ContactName" type="text">
                                    </div>
                                    <div class="inputs">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" type="text"><span class="required">*</span>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="fieldset">
                                <div class="title"><strong>Company Details</strong></div>
                                <div class="form-fields">
                                    <div class="inputs">
                                        <label asp-for="CompanyName"></label>
                                        <input asp-for="CompanyName" type="text"><span class="required">*</span>
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="fieldset">
                                <div class="title"><strong>Your Password</strong></div>
                                <div class="form-fields">
                                    <div class="inputs">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" type="password"><span class="required">*</span>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="inputs">
                                        <label>ConfirmPassword</label>
                                        <input asp-for="ConfirmPassword" type="password"><span class="required">*</span>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="buttons"><button type="submit" name="register-button" id="register-button" class="button-1 register-next-step-button">Register</button></div>
                        </form>
                        <div class="external-authentication"></div>
                    </div>
                </div>
            </div>
        </div>
